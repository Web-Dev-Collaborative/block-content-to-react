{
  "name": "@sanity/block-content-to-react",
  "description": "React component for transforming Sanity block content to React components",
  "version": "1.3.0",
  "main": "lib/BlockContent.js",
  "umd": "umd/BlockContent.min.js",
  "scripts": {
    "browserify": "NODE_ENV=production BROWSERIFY_ENV=build DEBUG='' browserify -t envify -g uglifyify lib/BlockContent.js -o umd/BlockContent.js --standalone=BlockContent --no-bundle-external",
    "build": "npm run clean && npm run compile && npm run browserify && npm run minify",
    "watch": "npm run compile -- --watch",
    "clean": "rimraf lib coverage .nyc_output umd/*.js",
    "compile": "babel --source-maps --copy-files -d lib/ src/",
    "coverage": "npm test -- --coverage",
    "minify": "uglifyjs -c -m -- umd/BlockContent.js > umd/BlockContent.min.js",
    "postpublish": "npm run clean",
    "posttest": "eslint .",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "keywords": [],
  "author": "Sanity <hello@sanity.io>",
  "license": "MIT",
  "dependencies": {
    "@sanity/block-content-to-hyperscript": "^1.2.1",
    "prop-types": "^15.5.10"
  },
  "devDependencies": {
    "@sanity/block-content-tests": "^0.0.4",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "browserify": "^14.4.0",
    "envify": "^4.1.0",
    "eslint": "^4.6.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-sanity": "^3.0.1",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.0.2",
    "prettier": "^1.7.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.1.0",
    "uglifyify": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/block-content-to-react.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/block-content-to-react/issues"
  },
  "homepage": "https://github.com/sanity-io/block-content-to-react#readme",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
